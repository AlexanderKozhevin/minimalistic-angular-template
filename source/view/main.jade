md-toolbar.main_header
  div.md-toolbar-tools
    h2
      span Tardis
    span(flex='')
    md-input-container.inputer_name(ng-show="new_item" )
      label Title
      input(ng-model="newitem_name" ng-blur="blurname()" ng-keypress="input_newname($event)" )
    md-button.md-icon-button(aria-label='Favorite' ng-click="new_item=true")
      md-icon.material-icons() note_add


section(layout='row', flex='' id="popupContainer")
  md-sidenav.md-sidenav-left.md-whiteframe-z2( md-is-locked-open="true")
    md-content(layout-padding)
      div.title(layout="column")
        md-button.md-fab(aria-label='add' ng-click="new_element()")
          md-icon(aria-label="Menu" class="material-icons") note_add
        div.main_menu
          div.item(layout="row" layout-align="start center" ng-repeat="item in main_menu" ng-class="{'active': item.active}")
            div.title(ng-click="set_parent(item)") {{item.name}}
            span(flex ng-click="set_parent(item)")
            md-button.md-icon-button.setting_button(aria-label='Favorite' ng-click="showGreeting(item)")
              md-icon.material-icons() settings
  md-content.main_content()
    div.content(layout="row" layout-align="start start" layout-wrap)
      div.item.md-whiteframe-z2(layout="row" layout-align="center center" ng-click="item_viewer(item)" ng-repeat="item in items")
        span {{item.name}}
      
